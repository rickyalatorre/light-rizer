</head>


<body class="container">

  <% if(message){%>
<div class="nav-container">
  <div class="brand-container">
    <div class='brand'>Light Rizer</div>
    <div class='hamburger'>
      <div class='line first'></div>
      <div class='line second'></div>
    </div>
  </div>
  <ul class='off' id='target'>
    <li> <a class='nav-link' href="/">Home</a></li>
    <li><a class='nav-link' href="/profile">Profile</a></li>
    <li><a class='nav-link' href="/settings">Settings</a></li>
    <li><a class='nav-link' href="/logout">Log Out</a></li>
    <li>
      <a class='nav-link'>
        <i class="fa-regular fa-user"></i><%=username%>
      </a>
    </li>
  </ul>
</div>
  <%}else if(!message){%>
    <div class="nav-container">
      <div class="brand-container">
        <div class='brand'>Light Rizer</div>
        <div class='hamburger'>
          <div class='line first'></div>
          <div class='line second'></div>
        </div>
      </div>

      <ul class='off' id='target' >
        <li> <a class='nav-link' href="/">Home</a></li>
        <li><a class='nav-link' href="/register-page">Register</a></li>
        <li><a class='nav-link' href="/login-page">Login</a></li>
      </ul>
    </div>
    <%}%>
