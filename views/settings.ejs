        <input class='thirdInput phoneInput phoneLastNumbers' type="tel" maxlength="4" name="phoneLastNumbers" pattern="[0-9]{4}" value="" placeholder="xxxx" required>
      </div>
    </div>
    <input class='reg-submit' type="submit" name="" value="submit">
    </form>
<%}else if(phone && !verified){ %>
  <%if(!wrongOtp){%>
    <div class='bubble load-hidden bubble-quote-triangle'>
      <p class="settings-p"><i class="fa-solid fa-key"></i> Verify with code sent to you!</p>
    </div>
<form class='phoneAndBubble' action='/settings-otp' method="post">
  <input class='register-input' type="text" name="otp" value="">
  <input class='reg-submit' type="submit" name="" value="submit">
</form>
<%}else if(wrongOtp){%>
  <div style="background-color: #d46a6a;" class='bubble load-hidden bubble-quote-triangle-red'>
