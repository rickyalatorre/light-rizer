  <form class='phoneAndBubble' action='/settings-otp' method="post">
    <input style='background-color: #f5dada;' class=' register-input' type="text" name="otp" value="">
    <input class='reg-submit' type="submit" name="" value="submit">
  </form>
<%}%>
<%}%>

